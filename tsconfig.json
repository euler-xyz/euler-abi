{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "declarationMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true
  }
}